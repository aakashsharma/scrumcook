function draw_chart(sprints, chores, bugs, features) {
    var chart;
    var total_chores = 0;
    var average = [sprints.length];
    var total_bugs = 0;
    var total_features = 0;
    var total_stories = 0;

    for (var index in chores) {
        total_chores += chores[index];
        average[index] = Math.round((chores[index] + bugs[index] + features[index]) / 3)
    }

    for (var index in bugs) {
        total_bugs += bugs[index];
    }

    for (var index in features) {
        total_features += features[index];
    }

    for (var value in features) {
        total_features += features[value];
    }

    total_stories = total_bugs + total_chores + total_features;

    $(document).ready(function() {
        chart = new Highcharts.Chart({
            chart: {
                renderTo: 'points_break_down_chart'
            },
            title: {
                text: 'Story Trend'
            },
            xAxis: {
                categories: sprints,
                title: {
                    text: "Sprints"
                }
            },
            yAxis: {
                title: {
                    text: 'Stories'
                }
            },
            tooltip: {
                formatter: function() {
                    var s;
                    if (this.point.name) {
                        s = '' +
                                this.point.name + ': ' + this.y + '%';
                    } else {
                        s = '<b>Sprint</b> : ' + this.x + '<br/>'
                                + '<b>' + this.series.name + '</b> : ' + this.y;
                    }
                    return s;
                }
            },
            labels: {
                items: [
                    {
                        html: 'Breakup',
                        style: {
                            left: '40px',
                            top: '8px',
                            color: 'black'
                        }
                    }
                ]
            },
            series: [
                {
                    type: 'column',
                    name: 'Chores',
                    data: chores
                },
                {
                    type: 'column',
                    name: 'Bugs',
                    data: bugs
                },
                {
                    type: 'column',
                    name: 'Features',
                    data: features
                },
                {
                    type: 'spline',
                    name: 'Average',
                    data: average
                },
                {
                    type: 'pie',
                    name: 'Total consumption',
                    data: [
                        {
                            name: 'Chores',
                            y: Math.round(total_chores / total_stories * 100),
                            color: '#4572A7'
                        },
                        {
                            name: 'Bugs',
                            y: Math.round(total_bugs / total_stories * 100),
                            color: '#AA4643'
                        },
                        {
                            name: 'Features',
                            y: Math.round(total_features / total_stories * 100),
                            color: '#89A54E'
                        }
                    ],
                    center: [100, 80],
                    size: 100,
                    showInLegend: false,
                    dataLabels: {
                        enabled: false
                    }
                }
            ]
        });
    });
}

