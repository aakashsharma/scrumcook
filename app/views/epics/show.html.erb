<h1><%= @epic.project.name %> : Epic</h1>
<p>
  <b>Title:</b>
  <%= @epic.title %>
</p>

<p>
  <b>Description:</b>
  <%= @epic.description %>
</p>

<p>
  <b>Project:</b>
  <%= @epic.project.name %>
</p>

<p>
  <b>Status:</b>
  <%= @epic.status %>
</p>

<p>
  <b>User:</b>
  <%= @epic.user.email %>
</p>

<% @epic.workable_items.each do |workable_item| %>
    <%= render :partial => 'workable_items/workable_item', :locals => {:workable_item => workable_item} %>
<% end %>

<%= link_to 'Edit', edit_epic_path(@epic) %> |
<%= link_to 'Back', project_path(@epic.project) %>
<% if !@epic.finished? %>
    | <%= link_to "Break it Down", new_workable_item_path(:project => @epic.project, :epic => @epic, :type => "Feature") %>
    | <%= link_to "Finish Epic", finish_epic_path(@epic) %>
<% end %>
