<% attachment_id = f.object.new_record? ? "new" : f.object.id %>
<li id="<%="#{attachment_id}_image_details" %>">
  <div class="attachment_thumbnail">
    <%= link_to image_tag(f.object.image.url(:thumb).to_s), f.object.image.url.to_s, :target => '_blank' %>
  </div>
  <div class="attachment_details_container clearfix">
    <ul class="attachment_details">
      <li class="name"><%= f.object.image_file_name %>
      </li>
      <li class="uploader">Uploaded by <%= f.object.user.display_name %></li>
      <li class="metadata"><%= f.object.image.size.present? ? f.object.image.size/1024 : 0 %>
        KB<span> on <%= f.object.updated_at.to_s(:pretty) %></span>
      </li>
      <li class="actions">
        <%= link_to 'Download', download_attachment_story_attachment_path(f.object.id) %>
        |
        <%= f.check_box :_destroy, :id => "#{attachment_id}_delete_image_checkbox", :style => "display:none;" %>
        <%= f.hidden_field :user_id %>
        <a id="<%= "#{attachment_id}_delete_image" %>" href="#" title="Remove Image" class="delete_image">
          Remove
        </a>
      </li>

    </ul>
  </div>
</li>