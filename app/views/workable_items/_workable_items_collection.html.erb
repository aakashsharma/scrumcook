<% workable_items.each do |workable_item| %>
    <div id="<%= "#{workable_item.id}_item_box" %>">
      <div id="<%= "#{workable_item.id}_preview_box" %>">
        <%= render :partial => 'workable_items/workable_item_preview', :locals => {:workable_item => workable_item} %>
      </div>
      <div id="<%= "#{workable_item.id}_detail_box" %>">
        <%= render :partial => 'workable_items/workable_item_detail', :locals => {:workable_item => workable_item} %>
      </div>
    </div>
<% end %>