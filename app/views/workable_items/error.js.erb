<% message = ""
    @workable_item.errors.full_messages.each do |msg |
     message += " #{msg}"
    end
    id = @workable_item.new_record? ? "icebox_new_workable_item" : "#{@workable_item.id}"
%>

$('#<%= id %>_title').val($('#<%= id %>_title').text());
$('#<%= id %>_workable_item_error_message').html("<%="#{message}"%>");
$('#<%= id %>_workable_item_error_message').show();
